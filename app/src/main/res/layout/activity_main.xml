<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tomas.mandatorycanteenapp.MainActivity">



    <Button
        android:id="@+id/menuButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Menu"
        android:onClick="navigateToMenu"
        />

    <Button
        android:id="@+id/rateButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Rate"
        android:onClick="navitageToRate"
        android:layout_below="@+id/menuButton"
        />

    <Button
        android:id="@+id/takeAwayButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Take Away"
        android:onClick="navigateToTakeAway"
        android:layout_below="@+id/rateButton"
        />

    <Button
        android:id="@+id/energyButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Energy"
        android:onClick="navigateToEnergy"
        android:layout_below="@+id/takeAwayButton"
         />
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Login"
        android:onClick="navigateToLogin"
        android:layout_below="@+id/energyButton"
        android:layout_alignParentStart="true" />



</RelativeLayout>
